<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <luceneMatchVersion>7.1.0</luceneMatchVersion>
    <lib dir="${solr.install.dir:../../../..}/contrib/extraction/lib" regex=".*\.jar" />
    <lib dir="${solr.install.dir:../../../..}/dist/" regex=".*\.jar" />
    <lib dir="${solr.install.dir:../../../..}/dist/" regex="sigct-solr-dih-customtransformer-10-.*\.jar"/>
    <requestHandler name="/dataimport" class="org.apache.solr.handler.dataimport.DataImportHandler">
        <lst name="defaults">
            <str name="config">db-config.xml</str>
        </lst>
    </requestHandler>
    <requestHandler name="/select" class="solr.SearchHandler">
        <lst name="defaults">
            <str name="echoParams">explicit</str>
            <int name="rows">250</int>
            <str name="fl">id,node_type,document_type,document_description,document_icone,document_ident_nom,document_ident_source_ext,document_ident_source_ctx,document_ident_id,section_information,section_titre,soussection_information,soussection_titre,rubrique_information_resume,rubrique_information_detail,rubrique_information_associe,score</str>
        </lst>
    </requestHandler>
    <!-- ping/healthcheck -->
    <requestHandler name="/admin/ping" class="solr.PingRequestHandler">
        <lst name="invariants">
            <str name="q">solrpingquery</str>
        </lst>
        <lst name="defaults">
            <str name="echoParams">all</str>
            <str name="df">id</str>
        </lst>
    </requestHandler>
    <admin>
        <defaultQuery>*:*</defaultQuery>
    </admin>
    <!-- The default high-performance update handler -->
    <updateHandler class="solr.DirectUpdateHandler2">
        <updateLog>
            <str name="dir">${solr.ulog.dir:}</str>
            <int name="numVersionBuckets">${solr.ulog.numVersionBuckets:65536}</int>
        </updateLog>
        <autoCommit>
            <maxTime>${solr.autoCommit.maxTime:15000}</maxTime>
            <openSearcher>false</openSearcher>
        </autoCommit>
        <autoSoftCommit>
            <maxTime>${solr.autoSoftCommit.maxTime:-1}</maxTime>
        </autoSoftCommit>
    </updateHandler>
</config>
